# =============================================================================
# LOCAL DEV / TEST (Environment A)
# Copy to .env.local for use on your main laptop.
# Next.js loads .env.local automatically when you run `pnpm dev`.
# =============================================================================

# App URL when testing in browser
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Local Docker services (from docker-compose.dev.yml)
# Host: localhost; same machine as the app
DATABASE_URL=postgresql://gooverchat:changeme@localhost:5432/gooverchat
DIRECT_URL=postgresql://gooverchat:changeme@localhost:5432/gooverchat
REDIS_URL=redis://localhost:6379/0

# Dev-only JWT secrets (never use these in production)
JWT_ACCESS_SECRET=dev-access-secret-min-32-characters-long
JWT_REFRESH_SECRET=dev-refresh-secret-min-32-characters-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Optional: skip sending email in dev
SMTP_SKIP_SEND=true

# MinIO (local S3) - only if you use file uploads in dev
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=gooverchat-uploads
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true
NEXT_PUBLIC_UPLOAD_URL=http://localhost:9000/gooverchat-uploads

# CORS and cookies for local
CORS_ORIGINS=http://localhost:3000
COOKIE_SECURE=false

# Socket.IO (optional Redis adapter in dev)
SOCKET_IO_REDIS_URL=redis://localhost:6379/1

# Rate limits (relaxed for testing)
RATE_LIMIT_AUTH_MAX=20
RATE_LIMIT_MESSAGE_MAX=120
LOG_LEVEL=debug
